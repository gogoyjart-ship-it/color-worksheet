{
  "compilerOptions": {
    "target": "ES2021",                 
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],  
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src", "src/vite-env.d.ts"]
}
